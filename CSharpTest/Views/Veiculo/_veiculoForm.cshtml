@model CSharpTest.Models.Veiculo

<div>
    <div class="row">
        <div class="col-md-8">
            <form id="despesaForm">
                <input type="hidden" asp-for="IdVeiculo" />
                <div class="form-group" id="chassi">
                    <label asp-for="Chassi" class="control-label"></label>
                    <input asp-for="Chassi" class="form-control" />
                </div>
                <div class="form-group" id="passageiros">
                    <label asp-for="Passageiros" class="control-label"></label>
                    <select asp-for="Passageiros" class="form-control">
                        <option value="">-- Selecione o veículo --</option>
                        <option value=2>Caminhão</option>
                        <option value=42>Ônibus</option>

                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Cor" class="control-label"></label>
                    <input asp-for="Cor" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="button" id="btnSubmit" class="btn btn-block btn-info">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>